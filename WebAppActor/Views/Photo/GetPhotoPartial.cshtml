@model WebAppActor.Models.ViewModelPhoto

<div class="scroll" style="width: 800px; text-align: center; height:350px;">
    <div id="scroll_child" class="scroll_child">
        @{
        foreach (var item in Model.photo)
        {
            <div id='@item.PhotoId' style="padding-top:10px;">
                <img class='mini-photo' src="data:image/jpg;base64,@(Html.Raw(Convert.ToBase64String((byte[])item.PhotoSmall)))"
                     data-title="@item.PhotoId" data-description="@Model.actor.ActorFirstName" />
                <button type="button" class="btn btn-danger delete deleteminiphoto" data-photoid="@item.PhotoId" style=" padding-left:5px;">
                    <i class="glyphicon   glyphicon-trash"></i>
                    <span>delete</span>
                </button>

            </div>

        }
        }
    </div>
</div>

<script type="text/javascript">
    function setwidth() {
            var widthScroll = 0;
            $('.mini-photo').each(function () {
                widthScroll += ($(this).width() + 5);

            });
            if (widthScroll < 800) {
                $('.scroll').css("overflow-x", "hidden");
            } else {
                $('.scroll').css("overflow-x", "scroll");
                $(".scroll_child").width(widthScroll);
            }
        }
    setwidth();
    

</script>
